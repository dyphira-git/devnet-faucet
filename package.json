{
  "name": "faucet",
  "type": "module",
  "version": "1.1.0",
  "description": "Faucet for Cosmos-SDK blockchains",
  "main": "faucet.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node faucet.js",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "predocker": "docker compose down --remove-orphans && docker-compose build faucet",
    "docker": "./scripts/docker-run.sh",
    "docker:build": "docker-compose build faucet",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "lint:unsafe": "biome check --write --unsafe .",
    "format": "biome format --write .",
    "check": "biome check . && vitest run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ping-pub/faucet.git"
  },
  "keywords": [
    "Faucet",
    "Cosmos",
    "SDK",
    "blockchain"
  ],
  "author": "Ping",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ping-pub/faucet/issues"
  },
  "homepage": "https://github.com/ping-pub/faucet#readme",
  "dependencies": {
    "@cosmjs/crypto": "^0.31",
    "@cosmjs/encoding": "0.31.0",
    "@cosmjs/proto-signing": "^0.31",
    "@cosmjs/stargate": "^0.31",
    "@noble/curves": "^1.9.2",
    "@noble/hashes": "^1.8.0",
    "@reown/appkit": "^1.8.13",
    "@reown/appkit-adapter-wagmi": "^1.8.13",
    "@tailwindcss/vite": "^4.1.17",
    "@tanstack/vue-query": "^5.75.4",
    "@vueuse/core": "^14.0.0",
    "@wagmi/core": "^2.21.2",
    "bech32": "^2.0.0",
    "bip32": "^5.0.0-rc.0",
    "bip39": "^3.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "cosmjs-types": "0.9.0",
    "dotenv": "^17.0.0",
    "ethers": "^6.8.0",
    "express": "^4.18.2",
    "long": "^5.2.3",
    "lucide-vue-next": "^0.554.0",
    "reka-ui": "^2.6.0",
    "tailwind-merge": "^3.4.0",
